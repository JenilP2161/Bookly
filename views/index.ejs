<%- include ('partials/header') %>  
<!DOCTYPE html>
<html lang="en">
  <head>
    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x"
    crossorigin="anonymous"
    />
    <title>Document</title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    <% for(var i=0;i<Books.length;i++) { %> 
        <div class="container margins">
            <div class="row">
                <div class="col">
                    <div class="card" style="width: 18rem">
                    <img src=<%= Books[i].img %>  class="card-img-top" alt="..." />
                    <div class="card-body">
                        <h5 class="card-title"><%= Books[i].title %></h5>
                        <p class="card-text"><%= Books[i].author %></p>
                        <a href=<%= Books[i].id %> class="btn btn-sm btn-primary">Show Book</a>
                        <a href="delete/<%= Books[i].id %>" class="btn btn-sm btn-danger" style="margin-left: 50px;">Delete Book</a>
                    </div>
                    </div>
                </div>
            </div>
        </div>
        <% } %> 
        <div class="contain"></div>
  </body>
</html>